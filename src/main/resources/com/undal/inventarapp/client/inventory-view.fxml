<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.collections.FXCollections?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.undal.inventarapp.client.HelloController"
          hgap="10" vgap="10" padding="10">
    <!-- Inventory Type -->
    <Label text="Inventory Type:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <ComboBox fx:id="inventoryTypeComboBox" GridPane.columnIndex="1" GridPane.rowIndex="0">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Mobel"/>
                <String fx:value="Utsmykning"/>
                <String fx:value="TekniskUtstyr"/>
            </FXCollections>
        </items>
    </ComboBox>

    <!-- Name -->
    <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <!-- Description -->
    <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextArea fx:id="descriptionField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <!-- Category -->
    <Label text="Category:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <TextField fx:id="categoryField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <!-- Date of Purchase -->
    <Label text="Date of Purchase:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <TextField fx:id="dateOfPurchaseField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

    <!-- Price -->
    <Label text="Price:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
    <TextField fx:id="priceField" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

    <!-- Life Expectancy -->
    <Label text="Life Expectancy (years):" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
    <TextField fx:id="lifeExpectancyField" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

    <!-- Number of Purchase -->
    <Label text="Number of Purchase:" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
    <TextField fx:id="numberOfPurchaseField" GridPane.columnIndex="1" GridPane.rowIndex="7"/>

    <!-- Placement -->
    <Label text="Placement:" GridPane.columnIndex="0" GridPane.rowIndex="8"/>
    <TextField fx:id="placementField" GridPane.columnIndex="1" GridPane.rowIndex="8"/>
</GridPane>